{
  "compilerOptions": {
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "./api/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "api/pages/login.ts"  // Keep only TypeScript files here
  ],
  "exclude": [
    "node_modules",
    "api/index.js"  // Exclude the JavaScript file
  ]
}
